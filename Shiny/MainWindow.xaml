<Window x:Class="Shiny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shiny"
        mc:Ignorable="d"
        Title="MainWindow" Height="724.79" Width="1043.277">
    <Grid>
        <Button x:Name="ButtonStartServer" Content="Start Server" HorizontalAlignment="Left" Margin="480,46,0,0" VerticalAlignment="Top" Width="143" Height="65" IsCancel="True" Click="ButtonStartServer_Click"/>
        <Button x:Name="ButtonStopServer" Content="Stop Server" HorizontalAlignment="Left" Margin="480,123,0,0" VerticalAlignment="Top" Width="143" Height="65" IsCancel="True" Click="ButtonStopServer_Click"/>
        <ListBox x:Name="Console" HorizontalAlignment="Left" Height="619" Margin="66,46,0,0" VerticalAlignment="Top" Width="370" SelectionChanged="Console_SelectionChanged"/>
        <Button x:Name="StartnStopButton"  HorizontalAlignment="Left" Margin="502,214,0,0" VerticalAlignment="Top" Width="96" Height="96" BorderThickness="0" Click="StartnStopButton_Click" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}" >
            <StackPanel>
                <Image Source="start.png" Stretch="Uniform" Height="100" Width="100"/>
            </StackPanel>
        </Button>
        <DataGrid x:Name="AlertTable" ItemsSource="{Binding}" Loaded="AlertTable_Loaded" HorizontalAlignment="Left" Height="619" Margin="715,46,0,0" VerticalAlignment="Top" Width="284"/>
    </Grid>

</Window>
