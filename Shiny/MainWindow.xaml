        <ToggleButton
            x:Name="StartnStopButton"
            Click="StartnStopButton_Click"
            HorizontalAlignment="Left"
            Margin="490,214,0,0"
            VerticalAlignment="Top"
            Width="96"
            Height="96"
            Style="{StaticResource MaterialDesignActionToggleButton}"
            ToolTip="MaterialDesignActionLightToggleButton" Background="LimeGreen">
            <ToggleButton.Content>
                <materialDesign:PackIcon
                Kind="PlayCircle"
                Width="85"
                Height="85" />
            </ToggleButton.Content>
            <materialDesign:ToggleButtonAssist.OnContent>
                <materialDesign:PackIcon
                Kind="StopCircle"
                Width="85"
                Height="85" />
            </materialDesign:ToggleButtonAssist.OnContent>
        </ToggleButton>

        <DataGrid x:Name="AlertTable" ItemsSource="{Binding}" Loaded="AlertTable_Loaded" HorizontalAlignment="Left" Height="619" Margin="618,46,0,0" VerticalAlignment="Top" Width="464" CanUserResizeRows="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" IsReadOnly="True" CanUserSortColumns="False"/>
        <DataGrid x:Name="ActiveAlertTable" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="356" Margin="1152,46,0,0" VerticalAlignment="Top" Width="512" CanUserResizeRows="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" IsReadOnly="True" CanUserSortColumns="False" MouseDoubleClick="ActiveAlertTable_MouseDoubleClick" Loaded="ActiveAlertTable_Loaded">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Activity}" Value="ON_ClientDrop">
                            <Setter Property="Background" Value="{DynamicResource SecondaryAccentBrush}"></Setter>
                            <Setter Property="Foreground" Value="{DynamicResource SecondaryAccentForegroundBrush}"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="ActiveAlertTable_MouseDoubleClick"/>
                </Style>
            </DataGrid.ItemContainerStyle>
        </DataGrid>
        <!--<CheckBox x:Name="BringTop" Content="Bring window to top" HorizontalAlignment="Left" Margin="502,352,0,0" VerticalAlignment="Top" Height="20" Width="141" Checked="BringTop_CheckedChanged" Unchecked="BringTop_CheckedChanged"/>-->

        <materialDesign:Snackbar x:Name="sbar" IsActive="False">
            <materialDesign:SnackbarMessage x:Name="sbarMsg" Content=" " ActionContent="KAPAT" ActionCommand="ApplicationCommands.New" />
        </materialDesign:Snackbar>

        <StackPanel
            Orientation="Vertical">
            <materialDesign:PopupBox
                Margin="16,0,16,0"
                StaysOpen="True">
                <Grid
                    Width="300"
                    Margin="8,8,8,8">
                    <Grid.Resources>
                        <Style
                            TargetType="CheckBox"
                            BasedOn="{StaticResource MaterialDesignCheckBox}">
                            <Setter
                                Property="Margin"
                                Value="8,8,10,8" />
                        </Style>
                        <Style
                            TargetType="TextBox"
                            BasedOn="{StaticResource MaterialDesignTextBox}">
                            <Setter
                                Property="materialDesign:HintAssist.IsFloating"
                                Value="True" />
                            <Setter
                                Property="Margin"
                                Value="8,8,8,8" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="0"
                        Style="{StaticResource MaterialDesignTitleTextBlock}"
                        Margin="8,8,8,16">
                        SEÇENEKLER
                    </TextBlock>
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="1"
                        materialDesign:HintAssist.Hint="Setting 1"
                        Margin="12,8,8,8"
                        Text="Bring Window to Top" />
                    <CheckBox
                        x:Name="BringTop"
                        Grid.Column="1"
                        Grid.Row="1"
                        VerticalAlignment="Bottom"
                        Checked="BringTop_CheckedChanged"
                        Unchecked="BringTop_CheckedChanged" />
                    <!--<TextBox
                        Grid.Column="0"
